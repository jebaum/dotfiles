[general]
accounts = jbaumy,jebaumg,neurionb
maxsyncaccounts = 3
maxconnections = 3
ui = machineui
pythonfile = ~/.mutt/nametrans.py




[Account jbaumy]
localrepository = jbaumy-local
remoterepository = jbaumy-remote
status_backend = sqlite
autorefresh = 1
quick = 10
postsynchook = notmuch new

[Repository jbaumy-local]
type = Maildir
localfolders = ~/.mutt/mail/jbaumy/
nametrans = nt_local

[Repository jbaumy-remote]
type = Gmail
remoteuser = james@jbaumy.com
remotepasseval = mailpasswd("jbaumy")
realdelete = no
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
nametrans = nt_remote




