function! Altmap(char) " map a character to Alt key in both vim and gvim
  if has('gui_running') | return '<A-'.a:char.'>' | else | return '<Esc>'.a:char|endif
endfunction
let cspace = has("gui_running") ? "<C-Space>" : "<C-@>"
