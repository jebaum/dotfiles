nnoremap <leader>p  :set list!<CR>
nnoremap <leader>q  :q<CR>
nnoremap <leader>r  :set relativenumber!<CR>
nnoremap <leader>s  :call StripTrailingWhitespaces()<CR>
vnoremap <leader>s  :!sort -f<CR>
"        <leader>t  TaskList.vim
