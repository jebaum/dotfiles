exec 'nnoremap ' . Altmap('j') . ' :vertical resize -2<CR>'
exec 'nnoremap ' . Altmap('k') . ' :resize -2<CR>'
exec 'nnoremap ' . Altmap('l') . ' :vertical resize +2<CR>'
exec 'nnoremap ' . Altmap('m') . ' :match none<CR>'
exec 'nnoremap ' . Altmap('n') . ' :tabmove +1<CR>'
exec 'nnoremap ' . Altmap('p') . ' :tabmove -1<CR>'
exec 'nnoremap ' . Altmap('q') . ' :quitall<CR>'
exec 'nnoremap ' . Altmap('1') . ' 1gt'
exec 'nnoremap ' . Altmap('2') . ' 2gt'
exec 'nnoremap ' . Altmap('3') . ' 3gt'
exec 'nnoremap ' . Altmap('4') . ' 4gt'
exec 'nnoremap ' . Altmap('5') . ' 5gt'
