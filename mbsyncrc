IMAPAccount jbaumy
Host imap.gmail.com
User james@jbaumy.com
PassCmd "gpg -q --for-your-eyes-only --no-tty -d ~/.mutt/jbaumypw.gpg"
SSLType IMAPS
AuthMechs LOGIN
CertificateFile /etc/ssl/certs/ca-certificates.crt

IMAPStore jbaumy-remote
Account jbaumy

MaildirStore jbaumy-local
# The trailing "/" is important
Path ~/.mail/jbaumy/
Inbox ~/.mail/jbaumy/inbox

Channel jbaumy-default
Master :jbaumy-remote:
Slave :jbaumy-local:
Patterns INBOX

Channel jbaumy-sent
Master :jbaumy-remote:"[Gmail]/Sent Mail"
slave  :jbaumy-local:sent

Channel jbaumy-trash
Master :jbaumy-remote:"[Gmail]/Trash"
slave  :jbaumy-local:trash

Channel jbaumy-archive
Master :jbaumy-remote:"[Gmail]/All Mail"
slave  :jbaumy-local:all

# Automatically create missing mailboxes, both locally and on the server
Create Both
# Automatically delete messages on either side if they are found deleted on the other.
Expunge Both
# Save the synchronization state files in the relevant directory
SyncState *

Group jbaumy
Channel jbaumy-default
Channel jbaumy-trash
Channel jbaumy-archive
Channel jbaumy-sent



