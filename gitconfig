[alias]
  a   = add
  au  = add -u
  ap  = add -p
  b   = branch
  c   = commit
  cm  = commit -m
  cv  = commit -v
  cam = commit -a -m
  cvm = commit -v -m
  cl  = clone
  co  = checkout
  cp  = cherry-pick

  d   = diff
  dw  = diff --color-words
  dc  = diff --cached
  dcw = diff --cached --color-words

  l     = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %Creset' --abbrev-commit
  lp    = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %Creset' --abbrev-commit -p
  la    = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)[%an]%Creset' --abbrev-commit
  ldate = log --pretty=format:"%C(red)%h\\ %C(green)%ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short
  lnc   = log --color --graph --pretty=format:'%h -%d %s (%cr)' --abbrev-commit
  last  = log -p --stat --abbrev-commit --max-count 1

  r   = rebase
  ra  = rebase --abort
  rc  = rebase --continue
  ri  = rebase -i

  s   = status
  ss  = status -s

  sa  = stash apply
  sb  = stash branch
  sd  = stash drop
  sl  = stash list
  sp  = stash pop
  ssav= stash save
  stxt= stash show --text

  type        = cat-file -t
  dump        = cat-file -p
  size        = cat-file -s
  lost        = fsck --full
  count       = shortlog -sn
  listaliases = "!git config -l | grep alias | cut -c 7-"
  reposize    = count-objects -v -H
  unstage     = reset HEAD --

[user]
  name = James Baumgarten
  email = jebaum@ucla.edu
  signingkey = jebaum@ucla.edu
[color]
    ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
  meta = yellow
  frag = magenta #bold
  plain = white
  old = red
  new = green
  commit = yellow bold
  func = green dim
[color "status"]
    added = green bold
    changed = yellow bold
    untracked = red bold
[github]
  user = jebaum
[core]
  editor = vim
  pager = less
  excludesfile = /home/james/.gitignore
  whitespace = trailing-space,space-before-tab
[push]
  default = tracking
[merge]
  tool = vimdiff
[init]
  # ctags integration with git hooks from here
  # http://tbaggery.com/2011/08/08/effortless-ctags-with-git.html
  templatedir = /home/james/.git_template
[advice]
  statusHints = false
[diff]
  mnemonicprefix = true
[branch]
  autosetupmerge = true
