[alias]
  a   = add
  au  = add --update
  ap  = add --patch
  b   = branch
  c   = commit
  ca  = commit --amend
  can = commit --amend --no-edit
  cm  = commit --message
  cv  = commit --verbose
  cam = commit --all --message
  cav = commit --all --verbose
  cl  = clone
  co  = checkout
  cp  = cherry-pick

  fancyblame = log -p -M --follow --stat --
  fancyblamesearch = log --pretty=format:'%h %an -- %s -- %ad' -S

  dsf   = "!dsf() { [ \"$GIT_PREFIX\" != \"\" ] && cd "$GIT_PREFIX"; git diff --color $@ | ~/dotfiles/scripts/diff-so-fancy/diff-so-fancy | less;}; dsf"
  d  = diff
  dc  = diff --cached
  l     = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %Creset' --abbrev-commit
  lp    = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %Creset' --abbrev-commit -p
  la    = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)[%an]%Creset' --abbrev-commit
  ldate = log --pretty=format:"%C(red)%h\\ %C(green)%ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short
  lnc   = log --color --graph --pretty=format:'%h -%d %s (%cr)' --abbrev-commit
  last  = log -p --stat --abbrev-commit --max-count 1

  p   = pull --rebase
  r   = rebase
  ra  = rebase --abort
  rc  = rebase --continue
  ri  = rebase -i

  s   = status --column
  snc = status --column
  ss  = status -s

  sa  = stash apply
  sb  = stash branch
  sd  = stash drop
  sl  = stash list
  sp  = stash pop
  ssav= stash save
  stxt= stash show --text

  type        = cat-file -t
  dump        = cat-file -p
  size        = cat-file -s
  lost        = fsck --full
  count       = shortlog -sn
  listaliases = "!git config -l | grep alias | cut -c 7-"
  reposize    = count-objects -v -H
  unstage     = reset HEAD --

[user]
  name = James Baumgarten
  email = jebaum@ucla.edu
  signingkey = jebaum@ucla.edu
[color]
    ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
  meta = yellow
  frag = magenta #bold
  plain = white
  old = red
  new = green
  commit = yellow bold
  func = blue
[color "status"]
    added = green bold
    changed = yellow bold
    untracked = red bold
[github]
  user = jebaum
[core]
  editor = nvim
  pager = delta --plus-color="#012800" --minus-color="#340001" --file-color="#FF00FF" --hunk-color="#FDB927" --theme='DarkNeon'
  excludesfile = "~/.gitignore"
  whitespace = trailing-space,space-before-tab
  untrackedCache = true
[interactive]
  diffFilter = delta --color-only
[merge]
  tool = vimdiff
[advice]
  statusHints = false
[diff]
  mnemonicPrefix = true
  algorithm = patience
[branch]
  autosetupmerge = true
[push]
  default = simple
