colorscheme darkness

" qmarks {{{
" all marks except subreddits are the first char from the url
qmark 1 192.168.1.100
qmark a reddit.com/r/all
qmark b reddit.com/r/bestof
qmark c courseweb.seas.ucla.edu
qmark f facebook.com
qmark g github.com/jebaum
qmark h https://news.ycombinator.com/
qmark j jbaumy.com/files
qmark l reddit.com/r/linux
qmark m my.ucla.edu
qmark n news.google.com
qmark p reddit.com/r/programming
qmark r reddit.com
qmark t teamfortress.tv/forum
qmark u reddit.com/r/ucla
qmark v reddit.com/r/vim
" }}}

" set options {{{
set defsearch="google"
set focuscontent
set hintchars="asdfghjueryitbncv"
set incsearch
set ignorecase
set status="input,location,bookmark,history,tabcount,position,ssl"
set newtab="all"
set shell="bash"
set smartcase
" set nextpattern="\bnext,^>$,^(>>|»)$,^(>|»),(>|»)$,\bmore\b,next ›"
" set previouspattern="\bprev|previous\b,^<$,^(<<|«)$,^(<|«),(<|«)$,‹ prev"
set nextpattern="next ›"
set previouspattern="‹ prev"
" }}}

" maps {{{
let mapleader = ","

nnoremap j gt
nnoremap gO gn

inoremap <C-c> <Esc>
cnoremap <C-n> <Down>
cnoremap <C-p> <Up>

" TODO add a dictionary/thesaurus engine, google image search, youtube, tpb
nnoremap sa :open amazon<Space>
nnoremap sg :open google<Space>
nnoremap sh :history!<Space>
nnoremap sw :open wikipedia<Space>

nnoremap Sa :tabopen amazon<Space>
nnoremap Sg :tabopen google<Space>
nnoremap Sh :history<Space>
nnoremap Sw :tabopen wikipedia<Space>

nnoremap <C-f>     /
nnoremap <C-l>     :nohlsearch<CR>
nnoremap <C-j>     <C-^>
nnoremap <C-Space> :styletoggle -name globaldark<CR>

nnoremap <A-l> /<Up><CR>
nnoremap <A-n> :tabmove +1<CR>
nnoremap <A-p> :tabmove -1<CR>

" ijkl
nnoremap i <Up>
nnoremap j h
nnoremap k <Down>
nnoremap h i

" TODO don't know what else to do with these for now, but fairly useless
" J and L just do <C-o> and <C-i> so I have 4 prime keys to spare
" technically C-o and C-i are jumplist, but jumplist (FOR NOW) is just browser history
nnoremap I k
nnoremap K j
nnoremap J H
" }}}

" sources {{{
